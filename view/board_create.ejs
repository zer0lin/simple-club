<%- include('header') %>
<div class="ui grid">
  <div class="four wide column">
    <a class="avatar avatar-link"
       href="javascript:void(0);"
       data-title="<%= user.username %> | <%= ({m: '男', f: '女', x: '保密'})[user.gender] %>"
       data-content="<%= user.bio %>">
      <img class="avatar" src="/img/person.png">
    </a>
  </div>

  <div class="eight wide column">
    <form class="ui form segment" method="post">
      <div class="field required">
        <label>板块名</label>
        <input type="text" name="board_name">
      </div>
      <input type="submit" class="ui button" value="提交">
    </form>
  </div>
</div>
<%- include('footer') %>
